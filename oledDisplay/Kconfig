menu "MacDap Display Configuration"

    config LCD_CONTROLLER_GPIO_RANGE_MAX
		int
		default 33 if IDF_TARGET_ESP32
		default 46 if IDF_TARGET_ESP32S2
		default 48 if IDF_TARGET_ESP32S3
		default 18 if IDF_TARGET_ESP32C2
		default 19 if IDF_TARGET_ESP32C3
		default 30 if IDF_TARGET_ESP32C6
		default 27 if IDF_TARGET_ESP32H2

    choice DISPLAY_HEIGHT
        prompt "Height in pixels"
        default DISPLAY_HEIGHT_64
        help
            Height of the display in pixels. a.k.a vertical resolution

        config DISPLAY_HEIGHT_64
            bool "64"
        config DISPLAY_HEIGHT_32
            bool "32"
    endchoice

    config DISPLAY_HEIGHT
        int
        default 64 if DISPLAY_HEIGHT_64
        default 32 if DISPLAY_HEIGHT_32

    config I2C_LCD_CONTROLLER_ADDR
        hex "I2C LCD Controller Address"
        range 0 0x7f
        default 0x3C
        help
            I2C LCD Controller Address.

    config GPIO_RESET
        int "GPIO RESET pin number"
        range -1 LCD_CONTROLLER_GPIO_RANGE_MAX
        default -1
        help
            GPIO number (IOxx) to RESET.
            When it is -1, RESET isn't performed.

	choice DISPLAY_ROTATION_CHOICE
		prompt "Display Rotation"
		help
			Select Display Rotation
		config DISPLAY_ROTATION_0
            bool "0 degrees"
		config DISPLAY_ROTATION_90
			bool "90 degrees"
		config DISPLAY_ROTATION_180
			bool "180 degrees"
		config DISPLAY_ROTATION_270
			bool "270 degrees"
	endchoice

    config DISPLAY_ROTATION
        int
        default 0 if DISPLAY_ROTATION_0
        default 1 if DISPLAY_ROTATION_90
        default 2 if DISPLAY_ROTATION_180
        default 3 if DISPLAY_ROTATION_270

    config DISPLAY_WIDTH
        int "Display Width in pixels"
        default 128
        range 1 1024
        help
            Width of the display in pixels. a.k.a horizontal resolution

    config DISPLAY_HEIGHT
        int "Display Height in pixels"
        default 64 if SSD1306_HEIGHT_64
        default 32 if SSD1306_HEIGHT_32
        range 1 1024
        help
            Height of the display in pixels. a.k.a vertical resolution
        
endmenu
